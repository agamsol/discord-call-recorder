# -=-=-=-= AUDIO CONFIGURATION =-=-=-=-
DESKTOP_AUDIO_DEVICE=virtual-audio-capturer
MICROPHONE_DEVICE='Microphone (Razer Seiren X)'
# -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-

# -=-=-=-= RECORDINGS -=-=-=-=-=-=-=-=-
BASE_RECORDINGS_USER_PATH=Documents
# -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-

# -=-=-=-= FFMPEG CONFIGURATION -=-=-=-
